<body>

    <div class="container">
        <div class="title">Programas JavaScript</div>
        <div class="button-container">
            <button class="button" onclick="calcularRFC()">Programa 1: Calcular RFC</button>
            <button class="button" onclick="ecuacionCuadratica()">Programa 2: Ecuación Cuadrática</button>
            <button class="button" onclick="adivinaNumero()">Programa 3: Adivina un Número</button>
        </div>
        <div id="message"></div>
    </div>

    <script>
        // Función para Programa 1: Calcular RFC
        function calcularRFC() {
            let nombre = prompt('Ingresa tu nombre:');
            let apellidoPaterno = prompt('Ingresa tu apellido paterno:');
            let apellidoMaterno = prompt('Ingresa tu apellido materno:');
            let fechaNacimiento = prompt('Ingresa tu fecha de nacimiento (DD/MM/AAAA):');

            // Esta es una implementación básica para generar un RFC aproximado.
            let rfc = apellidoPaterno.substring(0, 2) + apellidoMaterno.substring(0, 1) + nombre.substring(0, 1) + fechaNacimiento.substring(8, 10) + fechaNacimiento.substring(3, 5) + fechaNacimiento.substring(0, 2);
            rfc = rfc.toUpperCase();

            document.getElementById('message').textContent = 'Tu RFC es: ' + rfc;
        }

        // Función para Programa 2: Ecuación Cuadrática
        function ecuacionCuadratica() {
            let a = prompt('Ingresa el valor de a:');
            let b = prompt('Ingresa el valor de b:');
            let c = prompt('Ingresa el valor de c:');

            // Convertimos los valores a números
            a = parseFloat(a);
            b = parseFloat(b);
            c = parseFloat(c);

            // Calculamos el discriminante
            let discriminante = b * b - 4 * a * c;

            if (discriminante > 0) {
                let x1 = (-b + Math.sqrt(discriminante)) / (2 * a);
                let x2 = (-b - Math.sqrt(discriminante)) / (2 * a);
                document.getElementById('message').textContent = `Las soluciones son: x1 = ${x1}, x2 = ${x2}`;
            } else if (discriminante === 0) {
                let x = -b / (2 * a);
                document.getElementById('message').textContent = `La solución doble es: x = ${x}`;
            } else {
                document.getElementById('message').textContent = 'No hay solución real';
            }
        }

        // Función para Programa 3: Adivina un número
        function adivinaNumero() {
            const numeroCorrecto = 4; // Establecemos el número correcto como 4
            const numeroUsuario = prompt('Adivina un número entre 1 y 100:');

            if (numeroUsuario == numeroCorrecto) {
                document.getElementById('message').textContent = '¡Correcto! Has adivinado el número.';
            } else {
                document.getElementById('message').textContent = 'Incorrecto. Inténtalo de nuevo.';
            }
        }
    </script>

